<Window x:Class="CairoDesktop.DesktopNavigationToolbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CairoDesktop"
        mc:Ignorable="d"
        WindowStyle="None"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
            AllowsTransparency="True"
        Background="Transparent"
            Width="200"
            Height="54">
    <Window.Resources>
        <Style x:Key="CairoDesktopNavItemStyle"
            TargetType="{x:Type Button}">
            <Setter Property="OverridesDefaultStyle"
                Value="true" />
            <Setter Property="Height"
                Value="18" />
            <Setter Property="Width"
                Value="16" />
            <Setter Property="HorizontalAlignment"
                Value="Center" />
            <Setter Property="VerticalAlignment"
                Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter x:Name="ContentPresenter"
                            Margin="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                Value="true">
                                <Setter TargetName="ContentPresenter"
                                    Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White"
                                            ShadowDepth="0"
                                            Opacity="1" BlurRadius="7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                Value="true">
                                <Setter TargetName="ContentPresenter"
                                    Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White"
                                            ShadowDepth="0"
                                            Opacity="1" BlurRadius="5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CairoDesktopNavItem2Style"
            TargetType="{x:Type Button}">
            <Setter Property="OverridesDefaultStyle"
                Value="true" />
            <Setter Property="Height"
                Value="19" />
            <Setter Property="Width"
                Value="21" />
            <Setter Property="HorizontalAlignment"
                Value="Center" />
            <Setter Property="VerticalAlignment"
                Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter x:Name="ContentPresenter"
                            Margin="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                Value="true">
                                <Setter TargetName="ContentPresenter"
                                    Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White"
                                            ShadowDepth="0"
                                            Opacity="1" BlurRadius="7" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                Value="true">
                                <Setter TargetName="ContentPresenter"
                                    Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="White"
                                            ShadowDepth="0"
                                            Opacity="1" BlurRadius="5" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Horizontal"
                Width="200"
                Height="54">
        <StackPanel.Background>
            <ImageBrush ImageSource="Resources\desktopControlsBg.png" />
        </StackPanel.Background>
        <Button Style="{StaticResource CairoDesktopNavItemStyle}"
                    Margin="27,-4,0,0" Click="Back_Click">
            <Image Source="Resources\controlsBack.png"
                        Width="16"
                        Height="18" />
        </Button>
        <Button Style="{StaticResource CairoDesktopNavItem2Style}"
                    Margin="26,-5,0,0" Click="Home_Click">
            <Image Source="Resources\controlsHome.png"
                        Width="21"
                        Height="19" />
        </Button>
        <Button Style="{StaticResource CairoDesktopNavItem2Style}"
                    Margin="26,-5,0,0" Click="Browse_Click">
            <Image Source="Resources\controlsBrowse.png"
                        Width="21"
                        Height="19" />
        </Button>
        <Button Style="{StaticResource CairoDesktopNavItemStyle}"
                    Margin="25,-4,0,0" Click="Fwd_Click">
            <Image Source="Resources\controlsForward.png"
                        Width="16"
                        Height="18" />
        </Button>
    </StackPanel>
</Window>
