                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed"
                                Value="true">
                                <Setter TargetName="Border"
                                    Property="Background"
                                    Value="#FFdadada" />
                            </Trigger>
                        </ControlTemplate.Triggers>
