            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0"
                        EndPoint="0.5,1">
                        <GradientStop Color="#AF000000"
                            Offset="0" />
                        <GradientStop Color="#BF23272B"
                            Offset="1" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush"
