<UserControl x:Class="CairoDesktop.MenuBarExtensions.LayoutSwitcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:l10n="clr-namespace:CairoDesktop.Localization;assembly=CairoDesktop.Localization">
    <Menu Style="{StaticResource CairoMenuBarMainContainerStyle}">
        <MenuItem x:Name="LayoutSwitcherItem"
                  ItemContainerStyle="{StaticResource CairoMenuItemContainerStyle}"
                  SubmenuOpened="LayoutSwitcherItem_SubmenuOpened">
            <MenuItem.Header>
                <TextBlock Name="currentLayout"
                           ToolTipService.Placement="Bottom" />
            </MenuItem.Header>
            <MenuItem Click="OpenLayoutSettings"
                      Header="{Binding Path=(l10n:DisplayString.sMenuBar_OpenKeyboardLayoutSettings)}"
                      Style="{StaticResource {x:Type MenuItem}}">
                <!-- <MenuItem.Icon>
                    <Image Source="{DynamicResource InternalizationIcon}"
                           Width="16"
                           Height="16" />
                </MenuItem.Icon> -->
            </MenuItem>
        </MenuItem>
    </Menu>
</UserControl>
