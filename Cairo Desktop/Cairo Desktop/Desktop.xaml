<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="CairoDesktop.Desktop" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title=""
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Top="0"
        Left="0"
        AllowsTransparency="True"
        ShowActivated="False"
        UseLayoutRounding="True" 
        Name="CairoDesktopWindow"
        Background="#01000000"
        Closing="Window_Closing" 
        SourceInitialized="Window_SourceInitialized"
        LocationChanged="CairoDesktopWindow_LocationChanged"
        KeyDown="Window_KeyDown"
        MouseUp="CairoDesktopWindow_MouseUp"
        MouseRightButtonUp="CairoDesktopWindow_MouseRightButtonUp"
        DragOver="CairoDesktopWindow_DragOver"
        Drop="CairoDesktopWindow_Drop"
        AllowDrop="True">
    <Grid Name="grid" 
          PreviewMouseLeftButtonDown="grid_PreviewMouseLeftButtonDown" 
          HorizontalAlignment="Left" 
          VerticalAlignment="Top">
    </Grid>
</Window>